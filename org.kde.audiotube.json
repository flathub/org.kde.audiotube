{
    "id": "org.kde.audiotube",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "audiotube",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "separate-locales": false,
    "cleanup": [
        "/include/",
        "/share/cmake/"
    ],
    "modules": [
        "generated/python3-yt-dlp.json",
        "generated/python3-ytmusicapi.json",
        {
            "name": "pybind11",
            "config-opts": [
                "-DPYBIND11_FINDPYTHON=ON",
                "-DPYBIND11_TEST=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/pybind/pybind11/archive/refs/tags/v2.10.2.tar.gz",
                    "sha256": "93bd1e625e43e03028a3ea7389bba5d3f9f2596abc074b068e70f4ef9b1314ae",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13384,
                        "url-template": "https://github.com/pybind/pybind11/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "audiotube",
            "config-opts": [
                "-DPYBIND11_FINDPYTHON=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma-mobile/22.11/audiotube-22.11.tar.xz",
                    "sha256": "7884d6879f9615ee0f743d50cc5ee43409fac79953009b739121d1b4d153473d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 261558,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma-mobile/$version/audiotube-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
